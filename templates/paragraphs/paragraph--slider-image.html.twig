{#
/**
 * @file
 * Theme to format images that appear within the Image Slider Paragraph
 *
#}
{%
  set classes = [
    'paragraph',
    'paragraph--type--' ~ paragraph.bundle|clean_class,
    view_mode ? 'paragraph--view-mode--' ~ view_mode|clean_class,
    not paragraph.isPublished() ? 'paragraph--unpublished'
  ]
%}

{% block paragraph %}
    {% block content %}
      {% if paragraph.field_slide_link.value is not empty %}
        <a href="{{ paragraph.field_slide_link.value }}">
          <img src="{{ file_url(paragraph.field_slider_slide_image.entity.field_media_image.entity.fileuri) }}"
               class="d-block w-100" alt="{{ paragraph.field_slider_slide_image.entity.field_media_image.alt }}">
        </a>
      {% else %}
        <img src="{{ file_url(paragraph.field_slider_slide_image.entity.field_media_image.entity.fileuri) }}"
             class="d-block w-100" alt="{{ paragraph.field_slider_slide_image.entity.field_media_image.alt }}">
      {% endif %}
      {% if paragraph.field_slide_text.value is not empty %}
        <div class="carousel-caption d-md-block d-none">
          <p> {{ paragraph.field_slide_text.value|raw }} </p>
        </div>
      {% endif %}
    {% endblock %}
{% endblock paragraph %}
